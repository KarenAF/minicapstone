<h3>Order Details</h3>

<% @order.carted_fruits.each do |carted_fruit| %>
  <h4>Order id: <%= @order.id + 2359 %> </h4>
  <h4>Buyer User id: <%= @order.user_id%> </h4>
  <h4>Buyer name: <%= @order.user.name %></h4>
  <h4>Buyer email: <%= @order.user.email %></h4>
  <br>
  <h4>Fruit id: <%=carted_fruit.fruit_id%></h4>
  <h4>Fruit name: <%=carted_fruit.fruit.name%></h4>
  <h4>Quantity: <%= carted_fruit.quantity%></h4>
  <% if carted_fruit.fruit.images[0] %>
  <p><img src = "<%= carted_fruit.fruit.images[0].url %>", width="200"> </p>
<% end %>
<% end %>
<h4>Ordered on: <%= @order.created_at %></h4>
<h4>Order Subtotal: <%=@order.subtotal%></h4>
<h4>Tax: <%=@order.tax%></h4>
<h4>Total: <%=@order.total%></h4>