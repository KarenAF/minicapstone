<h1>Order History</h1>
<% @orders.each do |order| %>
<a href="/orders/<%= order.id %>"><h2> Order id: <%= order.id %> </h2></a>
<h5> Order date: <%= order.created_at %> </h5> 
<h5> Subtotal: $ <%= order.subtotal %> </h5> 
<h5> Tax: $ <%= order.tax %> </h5> 
<h5> Total: $ <%= order.total %> </h5> 
<h5> Items: </h5> 
<h5> <% order.carted_fruits.each do |carted_fruit| %> </h5>
<h3> <%= carted_fruit.fruit.name %> </h3>
<h5>Quantity: <%= carted_fruit.quantity %> </h5>
<h5><img src="<%= carted_fruit.fruit.images[0].url %>", width="200"></h5>
<% end %>
<br>
<br>
<% end %>




