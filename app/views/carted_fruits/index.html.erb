<h1> Your Fruit Basket: </h1>

<% @carted_fruits.each do |carted_fruit| %>
    <a href="/fruits/<%= carted_fruit.fruit.id %>"><h2> <%= carted_fruit.fruit.name.capitalize %> </a> </h2> 
    <h3><%= carted_fruit.fruit.price %> </h3>
    <h5> <%= carted_fruit.fruit.supplier.name %> </h5>
    <h5> quantity: <%= carted_fruit.quantity %> </h5>


    <% if carted_fruit.fruit.images[0] %>
    <img src = "<%= carted_fruit.fruit.images[0].url %>", width="200"> <% end %> 

    <%= link_to 'Remove from basket', "/carted_fruits/#{carted_fruit.id}", method: :delete %>
    <br>
    <% end %>

<%= form_tag "/orders", method: :post do %>
    <div class = "form-group">
    <br>
  <%= submit_tag "Check out", class: "btn btn-success" %>
    </div>
    <% end %>

   <a href = "/fruits/"><p> Back to all fruits </p></a> 




