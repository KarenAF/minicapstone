<h1> Fruits available for purchase: </h1>
<p><a href="/fruits?sort=name"> sort by name </a>   |   <a href="/fruits?sort=price"> sort by price </a>   |   <a href="/fruits/random"> random fruit </a></p>
<br>
<% @fruits.each_slice(4) do |three_fruits| %>
<div class = "row">
  <% three_fruits.each do |fruit| %>
    <div class ="col-md-3">
    <div class ="well">
    <a href="/fruits/<%= fruit.id %>"><h2> <%= fruit.name.capitalize %> </a> </h2> 
    <p> <%= fruit.available_or_not%> </p>
    <h3><%= fruit.price %> </h3>
    <h3> <img src = "<%= fruit.images[0].url %>"> <br><br> <%= fruit.description.capitalize %> </h3>
    <a href="/fruits/<%= fruit.id %>/edit">Edit this fruit</a>
    <br>
    </div>
</div>
<% end %>
</div>
<% end %>

<div>
<h2><a href="/fruits/new">Create new fruit</a></h2>
</div>
