<h1>New Fruit:</h1>

<% if @fruit.errors.any? %>
   <div id="error_explanation">
     <h5><%= pluralize(@fruit.errors.count, "error") %> prohibited this item from being saved:</h5>
  
     <ul>
     <% @fruit.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
 <% end %>

<%= form_tag '/fruits', method: :post do %>
  <div class = "form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @fruit.name, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :price  %>
    <%= text_field_tag :price, @fruit.price, class: "form-control"   %>
  </div>
  <div class = "form-group">
    <%= label_tag :description  %>
    <%= text_field_tag :description, @fruit.description, class: "form-control"   %>
  </div>
  <div class = "form-group">
    <%= label_tag :supplier_id  %>
    <%= text_field_tag :supplier_id, @fruit.supplier_id, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= submit_tag "Add fruit" %>
  </div>
  <a href = "/fruits/"><p> cancel </p></a>
<% end %>