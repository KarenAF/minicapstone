<h1>New Fruit:</h1>
<%= form_tag '/fruits', method: :post do %>
  <div class = "form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name  %>
  </div>
  <div class = "form-group">
    <%= label_tag :price  %>
    <%= text_field_tag :price  %>
  </div>
  <div class = "form-group">
    <%= label_tag :description  %>
    <%= text_field_tag :description  %>
  </div>
  <div class = "form-group">
    <%= label_tag :supplier_id  %>
    <%= text_field_tag :supplier_id %>
  </div>
  <div class = "form-group">
    <%= submit_tag "Add fruit" %>
  </div>
  <a href = "/fruits/"><p> cancel </p></a>
<% end %>