<h1>Edit first image for: <%= @fruit.name %></h1>
<%= form_tag "/fruits/#{@fruit.id}/images", method: :patch do %>
  <div class = "form-group">
    <%= label_tag :url %>
    <%= text_field_tag :url, @fruit.images[0].url  %>
  </div>
  <div class = "form-group">
    <%= submit_tag "Update image" %>
  </div>
  <a href = "/fruits/"><p> cancel </p></a>
<% end %>